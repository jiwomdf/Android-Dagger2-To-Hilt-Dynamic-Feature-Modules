<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:keep="@layout/layout_loading_detail_movie">

    <LinearLayout
        android:id="@+id/i_loading_image"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="200dp"
        android:orientation="vertical" />

    <include
        android:id="@+id/i_loading_fav"
        layout="@layout/layout_loading_card"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@+id/i_loading_image"
        app:layout_constraintBottom_toBottomOf="@+id/i_loading_image"/>

    <include
        android:id="@+id/i_loading_title"
        layout="@layout/layout_loading_card"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/i_loading_image" />

    <include
        android:id="@+id/i_loading_tag_line"
        layout="@layout/layout_loading_card"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/i_loading_title" />

    <include
        android:id="@+id/i_loading_imdb"
        layout="@layout/layout_loading_card"
        android:layout_width="160dp"
        android:layout_height="18dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/i_loading_tag_line" />

    <include
        android:id="@+id/i_loading_vote"
        layout="@layout/layout_loading_card"
        android:layout_width="100dp"
        android:layout_height="18dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/i_loading_imdb" />

    <include
        android:id="@+id/i_loading_dsc_label"
        layout="@layout/layout_loading_card"
        android:layout_width="100dp"
        android:layout_height="18dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/i_loading_vote" />

    <include
        android:id="@+id/i_loading_dsc"
        layout="@layout/layout_loading_card"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/i_loading_dsc_label" />

</androidx.constraintlayout.widget.ConstraintLayout>